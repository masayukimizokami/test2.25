<h1>一覧ページ</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>名前</th>
            <th>メール</th>
            <th>年齢</th>
            <th>インフォ</th>
            <th>登録日</th>
            <th>編集日</th>
            <th>参照</th>
            <th>編集</th>
            <th>削除</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.age %></td>
                <td><%= user.infomation %></td>
                <td><%= user.created_at.to_s(:datetime_jp) %></td>
                <td><%= user.updated_at.to_s(:datetime_jp) %></td>
                <td><%= link_to "参照",user %></td>
                <td><%= link_to "編集",[:edit,user] %></td>
                <td><%= link_to "削除",user, method: :delete, data:{ confirm:"本当に削除しますか？"} %></td>           
            </tr>
        <% end %>
    </tbody>
</table>

<h1>コメント一覧</h1>

<table>
    <thead>
        <tr>
            <th>コメント</th>
            <th>登校日</th>
            <th>編集日</th>
            <th>user_id</th>
            <th>名前</th>
            <th>参照</th>
            <th>編集</th>
            <th>削除</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.contents %></td>
                <td><%= post.created_at.to_s(:datetime_jp) %></td>
                <td><%= post.updated_at.to_s(:datetime_jp) %></td>
                <td><%= post.user_id %></td>
                <td><%= @users.name %></td>
                <td><%= link_to "参照",post %></td>
                <td><%= link_to "編集",[:edit,post] %></td>
                <td><%= link_to "削除",post, method: :delete, data:{ confirm:"本当に削除しますか？"} %></td>           
            </tr>
        <% end %>
    </tbody>
</table>


